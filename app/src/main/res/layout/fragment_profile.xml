<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProfileFragment">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_marginTop="60dp">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgv_user"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:background="@drawable/profile"></de.hdodenhof.circleimageview.CircleImageView>
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Change Profile Pic"
    android:textAllCaps="false"
    android:textSize="@dimen/edit_text"
    android:layout_marginTop="10dp"
    android:id="@+id/bt"></Button>
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="40dp">

    <EditText
        android:id="@+id/et_first_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/edittext_rounded_corner"
        android:textSize="@dimen/edit_text"
        android:textColor="@color/black"
        android:layout_marginLeft="50dp"
        android:paddingLeft="10dp"
        android:elevation="2dp"
        android:layout_marginRight="50dp"></EditText>
    <EditText
        android:id="@+id/et_last_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/edittext_rounded_corner"
        android:textSize="@dimen/edit_text"
        android:textColor="@color/black"
        android:paddingLeft="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:elevation="2dp"
        android:layout_marginTop="20dp"></EditText>
    <Button
        android:id="@+id/bt_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:textAllCaps="false"
        android:textSize="@dimen/button_text"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"></Button>

</LinearLayout>

</LinearLayout>